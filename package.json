{
  "name": "vite-vanilla-sass-lint",
  "version": "1.3.3",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "npx eslint \"src/assets/js/**/*.js\" && npx stylelint \"src/assets/**/*.{css,scss}\" && npx htmlhint \"**/*.html\"",
    "format": "prettier --write 'src/**/*.{js,css,scss,html,md}'"
  },
  "description": "Vite Vanilla JS + Sass starter with ESLint, Stylelint and HTMLHint linting, image optimization, modern-normalize.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcop135/vite-vanilla-sass-lint.git"
  },
  "keywords": [
    "vite",
    "vanilla-js",
    "sass",
    "scss",
    "starter",
    "template",
    "eslint",
    "stylelint",
    "htmlhint",
    "prettier"
  ],
  "author": "Marco Pontili",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/marcop135/vite-vanilla-sass-lint/issues"
  },
  "homepage": "https://github.com/marcop135/vite-vanilla-sass-lint#readme",
  "devDependencies": {
    "@vitejs/plugin-legacy": "^6.1.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.26.0",
    "globals": "^16.1.0",
    "htmlhint": "^1.1.4",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "sass-embedded": "^1.88.0",
    "stylelint": "^16.19.1",
    "stylelint-config-standard-scss": "^15.0.0",
    "terser": "^5.39.1",
    "vite": "^6.3.5",
    "vite-plugin-eslint2": "^5.0.3",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-imagemin": "^0.6.1",
    "vite-plugin-stylelint": "^6.0.0"
  },
  "dependencies": {
    "modern-normalize": "^3.0.1"
  }
}
